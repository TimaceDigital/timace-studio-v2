rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    // NOTE: For debugging, we can temporarily allow write if request.auth.token.email is the admin email
    // But ideally, we rely on the custom claim 'role'.
    function isAdmin() {
      return request.auth != null && (request.auth.token.role == 'admin' || request.auth.token.email == 'kevin@timace.io');
    }

    // Helper function to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document (assuming userId field)
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // --- Products Collection ---
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Showcase Builds Collection ---
    match /showcaseBuilds/{buildId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Client Orders Collection ---
    match /clientOrders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuth(); // Allow creation, validate ownership in function if needed
      allow update: if isAdmin(); 
    }

    // --- Client Builds Collection ---
    match /clientBuilds/{buildId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow write: if isAdmin();
    }

    // --- Messages Collection ---
    match /messages/{messageId} {
      allow read: if isAuth(); 
      allow create: if isAuth();
    }

    // --- Assets, Timelines, Revisions ---
    match /assets/{assetId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /timelines/{timelineId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    match /revisions/{revisionId} {
      allow read: if isAuth();
      allow write: if isAdmin();
      allow update: if isAuth();
    }
  }
}
